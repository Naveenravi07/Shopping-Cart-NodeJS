{{>admin-header}}
<a href="/admin/add-products" class="btn btn-success" style="float: right; margin-right: 30px; margin-top: 20px;">ADD
    PRODUCTS</a>

<div class="container" style="padding-top: 80px;">
    <div class="row">
        <div class="col-xl-12 " style="overflow-x: auto;">
            <table class="table" id="table_id">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Category</th>
                        <th scope="col">description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if items}}
                    {{#each items}}
                    <tr>
                        <td style="padding-left: 15px; padding-top: 40px;"></td>
                        <td style="padding-left: 15px; font-weight: 600; padding-top: 40px;"> {{this.name}} </td>
                        <td style="padding-left: 45px; font-weight: 600;  padding-top: 40px;"> {{this.brand}} </td>
                        <td style="padding-left: 45px;font-weight: 600;  padding-top: 40px;"> {{this.category}} </td>
                        <td style="padding-left: 45px; font-weight: 600; padding-top: 40px;"> {{this.description}} </td>
                        <td style="padding-left: 45px;font-weight: 600;  padding-top: 40px;"> <img
                                src="/images/product-images/{{this._id}}.jpg" alt="" style="height: 50px; width: 40px;">
                        </td>


                        <td style="padding-left: 15px; padding-top: 40px;"> <a href="/admin/edit-product/{{this._id}}">
                                <button class="btn btn-primary">
                                    Edit</button> </a> </td>



                        <td style="padding-left: 15px;padding-top: 40px; "> <a
                                href="/admin/delete-product/{{this._id}}"> <button class="btn btn-danger"
                                    onclick="return confirm ('Are You Sure You Want To Delete {{this.name}} ') ">
                                    Delete</button></a> </td>
                    </tr>

                    {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>


<style>
    table {
        counter-reset: 1;
    }

    table tr {
        counter-increment: rowNumber;
    }

    table tr td:first-child::before {
        content: counter(rowNumber);
    }
</style>