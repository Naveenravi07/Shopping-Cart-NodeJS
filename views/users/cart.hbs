<div class="card">
    {{>user-header}}
    <div class="row">
        <div class="col-md-8 cart">
            <div class="title">
                <div class="row">
                    <div class="col">
                        <h4><b>Shopping Cart</b></h4>
                    </div>
                    {{#if cartCount}}
                    <div class="col align-self-center text-right text-muted">{{cartCount}} Items Inside Your Cart </div>
                    {{/if}}
                </div>
            </div>

            {{#if products}}
            {{#each products}}

            <div class="row border-top border-bottom" id="productDivCart">
                <div class="row main align-items-center">
                    <div class="col-2"><img class="img-fluid" src="/images/product-images/{{this.item}}.jpg"></div>

                    <div class="col">

                        <div class="row text-muted"> {{this.product.name}} </div>
                        <div class="row">{{this.product.description}}</div>
                    </div>

                    <button class="col border" style="color: rgb(12, 12, 12); font-size: 20px; font-weight: bold; "
                        onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">+</button>


                    {{!-- Display Current Of The Product Quantity Here --}}
                    <h5 class="col border"> <strong id="CARTNO"> <span style="text-align: center;"
                                id="{{this.product._id}}">{{this.quantity}}</span> </strong> </h5>

                    <button class="col border" style="color: rgb(8, 8, 8); font-weight: bold; font-size: 20px;  "
                        onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)"> -</button>

                    <div class="col"> &#x20b9 {{this.product.price}} </div>
                    <button class="btn btn-danger" onclick="removeProduct('{{this._id}}','{{this.product._id}}')">Delete
                    </button>

                </div>
            </div>
            {{/each}}
            {{/if}}

            <div class="back-to-shop"><a href="/">&leftarrow;</a><span class="text-muted">Back to shop</span></div>
        </div>
        <div class="col-md-4 summary">
            <div>
                <h5><b>Summary</b></h5>
            </div>
            <hr>
            <div class="row">
                {{#if cartCount}}
                <div class="col" style="padding-left:0;"> {{cartCount}} ITEMS </div> {{/if}}
                <div class="col text-right">&#x20b9 <span id="hfgf"> {{total}}</span></div>
               
            </div>

            <div class="row" style="border-top: 1px solid rgba(12, 12, 12, 0.1); padding: 2vh 0;">
                <div class="col">TOTAL PRICE</div>
                <div class="col text-right"> &#x20b9 <span id="carttotalamount">
                    {{#if total}}
                        {{total}}
                        {{else}}
                        0
                        {{/if}}
                    </span> </div>
            </div> <a href="/place-order" class="btn">CHECKOUT</a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="/stylesheets/cart.css">
<script src="/javascripts/script.js"></script>

